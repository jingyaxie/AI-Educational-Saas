{
  "version": "1.0.0",
  "name": "AI-Educational-Saas",
  "description": "AI教育SaaS平台的Cursor规则配置",
  "rules": {
    "editor": {
      "formatOnSave": true,
      "tabSize": 2,
      "insertSpaces": true,
      "trimTrailingWhitespace": true,
      "insertFinalNewline": true,
      "rulers": [80, 100],
      "wordWrap": "off",
      "lineNumbers": "on",
      "minimap": {
        "enabled": true,
        "maxColumn": 80
      }
    },
    "files": {
      "exclude": [
        "**/.git",
        "**/node_modules",
        "**/__pycache__",
        "**/.pytest_cache",
        "**/venv",
        "**/dist",
        "**/build",
        "**/.DS_Store",
        "**/coverage",
        "**/.env",
        "**/.env.*"
      ],
      "watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/venv/**": true,
        "**/dist/**": true,
        "**/build/**": true
      }
    },
    "search": {
      "exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/venv": true,
        "**/dist": true,
        "**/build": true
      }
    },
    "typescript": {
      "preferences": {
        "importModuleSpecifier": "relative",
        "quoteStyle": "single"
      },
      "suggest": {
        "completeFunctionCalls": true,
        "autoImports": true
      }
    },
    "python": {
      "analysis": {
        "typeCheckingMode": "basic",
        "diagnosticMode": "workspace",
        "useLibraryCodeForTypes": true
      },
      "formatting": {
        "provider": "black",
        "blackPath": "black",
        "blackArgs": ["--line-length", "100"]
      },
      "linting": {
        "enabled": true,
        "pylintEnabled": true,
        "flake8Enabled": true,
        "mypyEnabled": true
      }
    },
    "javascript": {
      "format": {
        "semicolons": "insert",
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true
      },
      "suggest": {
        "completeFunctionCalls": true,
        "autoImports": true
      }
    },
    "react": {
      "suggest": {
        "autoImports": true
      },
      "format": {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
      }
    },
    "git": {
      "autofetch": true,
      "confirmSync": false,
      "enableSmartCommit": true,
      "suggestSmartCommit": true
    },
    "terminal": {
      "integrated": {
        "shell": {
          "osx": "/bin/bash",
          "linux": "/bin/bash",
          "windows": "C:\\Windows\\System32\\cmd.exe"
        },
        "fontFamily": "MesloLGS NF",
        "fontSize": 14,
        "lineHeight": 1.2
      }
    },
    "workbench": {
      "colorTheme": "Default Dark+",
      "iconTheme": "material-icon-theme",
      "tree": {
        "indent": 20,
        "renderIndentGuides": true
      },
      "editor": {
        "tabSizing": "shrink",
        "showTabs": true,
        "highlightActiveIndentGuide": true
      }
    },
    "security": {
      "workspace": {
        "trust": {
          "enabled": true
        }
      }
    },
    "extensions": {
      "recommendations": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "PKief.material-icon-theme",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "mikestead.dotenv",
        "christian-kohler.path-intellisense",
        "christian-kohler.npm-intellisense",
        "dsznajder.es7-react-js-snippets",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
} 